!!!
%html
  %head
    %title Decision Mate
    %meta(content = "width=device-width,initial-scale=1" name = "viewport")
    = csrf_meta_tags
    = csp_meta_tag
    = favicon_link_tag "icon.ico"
    = stylesheet_link_tag "application", "data-turbo-track": "reload"
    = stylesheet_link_tag "main", "data-turbo-track": "reload"
    = javascript_include_tag "application", "data-turbo-track": "reload", defer: true

  %body.d-flex.flex-column.min-vh-100
    %header
      %nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.rounded
        .container-fluid
          %button.navbar-toggler(aria-controls = "navbarsExample10" aria-expanded = "false" aria-label = "Toggle navigation" data-bs-target = "#navbarsExample10" data-bs-toggle = "collapse" type = "button")
            %span.navbar-toggler-icon
          #navbarsExample10.collapse.navbar-collapse.justify-content-md-center
            %ul.navbar-nav
              %li.nav-item
                = link_to image_tag("app-logo.svg"), root_path, class: "navbar-brand"
              %li.nav-item
                = link_to "The Decision Mate", new_user_decision_path, class: "nav-link"
              %li.nav-item
                = link_to "Last Predictions", user_decisions_path, class: "nav-link"
              %li.nav-item
                = link_to "About the project", about_index_path, class: "nav-link"

    = yield


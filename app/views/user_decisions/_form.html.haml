= form_for @user_decision do |f|
  - if @user_decision.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user_decision.errors.count, "error")} prohibited this user_decision from being saved:"
      %ul
        - @user_decision.errors.full_messages.each do |message|
          %li= message

  .field
    = f.select :gender, [["Male", "male"], ["Female", "female"], ["Other", "other"]],
                        { include_blank: "Gender:" }, { class: "form-select form-select-md mb-3" }
  .field
    = f.select :age, [["> 1 and < 30 ", "male"], ["Female", "female"], ["Other", "other"]],
                        { include_blank: "Age:" }, { class: "form-select form-select-md mb-3" }
  .field
    = f.label :educational_level
    = f.text_field :educational_level
  .field
    = f.label :martial_status
    = f.text_field :martial_status
  .field
    = f.label :professional_area
    = f.text_field :professional_area
  .field
    = f.label :family_size
    = f.number_field :family_size
  .actions
    = f.submit 'Save'
